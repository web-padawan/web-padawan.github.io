---json
{
  "layout": "base",
  "title": "Вірші"
}
---
<div class="content">
  <h1>{{ title }}</h1>

  {% for year, posts in collections.evening | groupByYear %}
  <section>
    <table class="dated-table">
      <tbody>
        {% for post in posts %}
          <tr>
            <td>
              <time datetime="{{ post.date | dateToIsoString }}">{% formatShortDate post.date %}</time>
            </td>
            <td>
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
  {% endfor %}

</div>
